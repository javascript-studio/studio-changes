{
  "name": "@studio/changes",
  "version": "2.0.1",
  "description": "Generate a changelog as part of the npm version command",
  "bin": {
    "changes": "bin/cmd.js"
  },
  "main": "lib/changes.js",
  "scripts": {
    "lint": "eslint . && prettier --check .",
    "test": "mocha",
    "watch": "mocha --watch",
    "posttest": "npm run lint",
    "preversion": "npm test",
    "version": "bin/cmd.js -c --footer",
    "postversion": "git push --follow-tags && npm publish"
  },
  "keywords": [
    "changelog",
    "version",
    "release",
    "productivity"
  ],
  "author": "Maximilian Antoni <max@javascript.studio>",
  "contributors": [
    "Blade Barringer <blade@crookedneighbor.com>",
    "Pat Cavit <github@patcavit.com>"
  ],
  "homepage": "https://github.com/javascript-studio/studio-changes",
  "eslintConfig": {
    "extends": "@studio",
    "rules": {
      "node/no-sync": 0,
      "no-template-curly-in-string": 0,
      "no-unreachable": 0
    }
  },
  "dependencies": {
    "@studio/editor": "^1.1.1",
    "@studio/json-request": "^3.0.0",
    "detect-indent": "^6.0.0",
    "hosted-git-info": "^3.0.8",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "@sinonjs/referee-sinon": "^8.0.1",
    "@studio/eslint-config": "^2.0.0",
    "eslint": "^7.19.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javascript-studio/studio-changes.git"
  },
  "files": [
    "bin",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*": "prettier --write"
  }
}
